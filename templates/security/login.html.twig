{% extends 'base.html.twig' %}


{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .error {color: red}
</style>

<div class="example-wrapper">


    <h1>Login page! âœ…</h1>

    {% if error %}
        <span class="error">{{ error.messageKey }}</span>
    {% endif %}
    
    <form action="{{ path('login') }}" method="POST">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="_email" id="email" value="{{ last_username}}" placeholder="Your email">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="_password" id="password" placeholder="Your password">
        <button class="btn" type="submit">Login</button>
    </form>
</div>
{% endblock %}
